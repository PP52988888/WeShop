@model WeShop.WeiXin.Models.HomeViewModel
@{
    ViewBag.Title = "Search_list";
    Layout = "~/Views/_LayoutNav.cshtml";
}

<!--ftop开始-->
<div class="ftop">
    <div class="index_search index_search01">
        <a class="back" onClick="javascript:history.back(-1);"><img src="~/Content/imagesicon_03.png"></a>
        <div>
            <input type="text" placeholder="请输入您要搜索的产品">
            <input class="dw" onclick="document.location='search_list.html'" type="button" value=" ">
        </div>
    </div>
    <div style="clear: both;"></div>
</div>
<!--ftop开始-->
<div class="search_list">
    <p><a class="on"><span>综合</span></a><a><span>销量</span></a><a><span>评价</span></a><a><span class="bg">价格</span></a></p>
    <ul>
        @foreach (var product in Model.Product)
        {
            <li>
                <a href="@Url.Action("Product","Home",new {procode=product.Code })">
                    <img src="@product.ProPhotoes.FirstOrDefault(p=>p.No==0).ImgUrl">
                    <div class="search_item">
                        <p>@product.Name</p>
                        <h2><i>￥</i><b>@product.SellPrice</b><span>月销18252笔</span></h2>
                    </div>
                </a>
            </li>
        }
    </ul>
</div>
@section Style
{
    <link href="~/Content/css/index.css" type="text/css" rel="stylesheet">
    <link href="~/Content/css/swiper.min.css" type="text/css" rel="stylesheet">
}

@section Script
{
    <script>
        $(".search_list ul li a img").each(function () {
            var w = $(this).width();
            $(this).height(w + "px");
        })
    </script>
}